<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu"
    >

    <Button
        android:id="@+id/panggil"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:background="@drawable/mybutton"
        android:layout_marginStart="30dp"
        android:layout_marginTop="144dp"
        android:paddingTop="10dp"
        android:drawableTop="@drawable/phonenya"
        android:text="Telepon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:radius="100dp"

        />

    <Button
        android:id="@+id/ig"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:drawableTop="@drawable/igna"
        android:layout_marginStart="8dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="28dp"
        android:text="Instagram"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/panggil"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/mybutton"/>

    <Button
        android:id="@+id/email"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:drawableTop="@drawable/emailna"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panggil"
        android:background="@drawable/mybutton"/>

    <Button
        android:id="@+id/fb"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/mybutton"
        android:drawableTop="@drawable/fbna"
        android:paddingTop="10dp"
        android:text="Facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/ig" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:text="My Contact"
        android:textSize="32dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>